<% include ../partials/header.ejs %>
<% include ../partials/navbar.ejs %>
<main class="container">
    <h1>Edit User</h1>

    <form method="post">
        <fieldset class="form-group">
            <label for="username" class="col-sm-2">Username: *</label>
            <input name="username" required value="<%= user.username %>" />
        </fieldset>
        <fieldset class="form-group">
            <label for="password" class="col-sm-2">Password: *</label>
            <input name="password" type ="password" required value="<%= user.password %>" />
        </fieldset>
        <fieldset class="form-group">
            <label for="email" class="col-sm-2">E-mail: *</label>
            <input name="eamil" type="email" required value="<%= user.email %>" />
        </fieldset>
        <button type="submit" class="col-sm-offset-2 btn btn-success">Submit</button>

        <a href="/users/delete/<%= user._id %>" title="Delete" onclick="return confirm('Are you sure you want to delete this?');">
            <button type="button" class="btn btn-danger">Delete</button>
        </a>

    </form>

</main>
