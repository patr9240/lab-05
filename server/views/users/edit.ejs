<% include ../partials/header.ejs %>
<% include ../partials/navbar.ejs %>
<main class="container">
    <h1>Edit User</h1>

    <form method="post">
        <fieldset class="form-group">
            <label for="title" class="col-sm-2">Username: *</label>
            <input name="title" required value="<%= User.username %>" />
        </fieldset>
        <fieldset class="form-group">
            <label for="content" class="col-sm-2">Password: *</label>
            <textarea name="content" required><%= User.password %></textarea>
        </fieldset>
        <button type="submit" class="col-sm-offset-2 btn btn-success">Create</button>

        <a href="/user/delete/<%= user._id %>" title="Delete" onclick="return confirm('Are you sure you want to delete this?');">
            <button type="button" class="btn btn-danger">Delete</button>
        </a>

    </form>

</main>
<% include ../partials/footer.ejs %>